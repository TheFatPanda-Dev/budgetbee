FROM php:8.5.3-fpm

RUN apt-get update && apt-get upgrade -y && rm -rf /var/lib/apt/lists/*

# Install cron
RUN apt-get update && apt-get install -y cron && rm -rf /var/lib/apt/lists/*

# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Install gd and zip extensions
RUN apt-get update && apt-get install -y libpng-dev zlib1g-dev libzip-dev \
    && docker-php-ext-install gd zip

# Install other extensions
RUN docker-php-ext-install mysqli pdo_mysql

# Install memcached
ENV MEMCACHED_DEPS="zlib1g-dev libmemcached-dev libsasl2-dev"
RUN apt-get update && apt-get install -y libmemcached11 zlib1g && rm -rf /var/lib/apt/lists/*
RUN set -xe \
    && apt-get update \
    && apt-get install -y --no-install-recommends $PHPIZE_DEPS $MEMCACHED_DEPS \
    && pecl install memcached \
    && echo "extension=memcached.so" > /usr/local/etc/php/conf.d/20_memcached.ini \
    && rm -rf /tmp/* \
    && rm -rf /var/lib/apt/lists/*

# Install Python, pip, and build dependencies
RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-dev python3-venv build-essential \
    gcc g++ libffi-dev make \
    libopenblas-dev liblapack-dev \
    gfortran \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies in an isolated virtualenv
RUN python3 -m venv /opt/pyenv \
    && /opt/pyenv/bin/pip install --no-cache-dir --upgrade pip \
    && /opt/pyenv/bin/pip install --no-cache-dir scikit-learn joblib

ENV PATH="/opt/pyenv/bin:${PATH}"

# Set working directory
WORKDIR /var/www/html
